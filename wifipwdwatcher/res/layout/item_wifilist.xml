<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:layout_margin="5dp"
    android:background="@drawable/border_item_wifilist">
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         >
         <TextView
             android:id="@+id/wifitext"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="wifi名称"
             android:padding="2dp"
             android:textSize="18sp"
             />
         <TextView
             android:id="@+id/wifiname"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_toRightOf="@id/wifitext"
             android:layout_toEndOf="@id/wifitext"
              android:textSize="18sp"
             />
         </RelativeLayout>
          <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         >
         <TextView
             android:id="@+id/wificodetext"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:padding="2dp"
             android:text="wifi密码"
             android:textSize="18sp"
             />
         <TextView
             android:id="@+id/wificode"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_toRightOf="@id/wificodetext"
             android:layout_toEndOf="@id/wificodetext"
              android:textSize="18sp"
             />
         </RelativeLayout>
</LinearLayout>
